
" show (partial) command
set showcmd
" show cursor position
set ruler
" wrap lines & break without breaking words
set wrap lbr nolist
" enable syntax highlight
syntax on
" use crystallite as color scheme
colorscheme Crystallite
" set font for GUI
if has('gui_running')
        set guifont=Source\ Code\ Pro\ Medium\ 16
endif

" always show status line
set laststatus=2
